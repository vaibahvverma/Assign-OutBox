# Database
DATABASE_URL="postgresql://user:password@localhost:5432/outbox?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Server
PORT=4000
FRONTEND_URL="http://localhost:3000"

# Worker Configuration
WORKER_CONCURRENCY=5

# Rate Limiting
MAX_EMAILS_PER_HOUR_PER_SENDER=50
GLOBAL_MAX_EMAILS_PER_HOUR=200

# Delay between emails (milliseconds)
# Minimum 2 seconds between sends to mimic provider throttling
MIN_DELAY_BETWEEN_EMAILS=2000

# Google OAuth (for frontend - copy to client/.env.local)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# SMTP (Optional - leave empty to use Ethereal auto-generated account)
# SMTP_HOST="smtp.ethereal.email"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER=""
# SMTP_PASS=""
